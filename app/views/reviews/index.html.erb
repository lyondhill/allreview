<h1>Listing reviews</h1>


<% if @current_product %>
  <p>
    <b>Product name:</b>
    <%= @current_product.name %>
  </p>
<% end %>


<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.body %></td>
    <td><%= review.score %></td>
    <td><%= link_to 'Show', (@current_product) ? product_review_path(@current_product, review) : review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_product_review_path %>
